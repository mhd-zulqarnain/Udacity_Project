<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/ed_std_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Student_name" />

    <EditText
        android:id="@+id/ed_std_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Student_phone" />

    <EditText
        android:id="@+id/ed_std_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Student_email" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/std_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_button" />
        <Button
            android:id="@+id/std_add_img_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_image"/>
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/imgview_std"
        />
</LinearLayout>